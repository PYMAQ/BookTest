<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <!--1. Hello -->
    <servlet>
        <servlet-name>Servlet.other.HelloServlet</servlet-name>
        <servlet-class>Servlet.other.HelloServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>Servlet.other.HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!--2.登陆 -->
    <servlet>
        <servlet-name>Servlet.LoginServlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--3.注册  -->
    <servlet>
        <servlet-name>Servlet.Creat.RegisterServlet</servlet-name>
        <servlet-class>Servlet.Creat.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.Creat.RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--4. 英雄列表 -->
    <servlet>
        <servlet-name>Servlet.other.HeroListServlet</servlet-name>
        <servlet-class>Servlet.other.HeroListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.other.HeroListServlet</servlet-name>
        <url-pattern>/listHero</url-pattern>
    </servlet-mapping>

    <!--5. 用户列表-->
    <servlet>
        <servlet-name>Servlet.Read.userListServlet</servlet-name>
        <servlet-class>Servlet.Read.userListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.Read.userListServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>


    <!--6.新增用户-->
    <servlet>
        <servlet-name>Servlet.AddUserServlet</servlet-name>
        <servlet-class>Servlet.AddUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>



    <!--7.删除用户-->
    <servlet>
        <servlet-name>Servlet.Delete.DeleteServlet</servlet-name>
        <servlet-class>Servlet.Delete.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet.Delete.DeleteServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>



